%script{ src: "http://connect.facebook.net/en_US/all.js#appId=233282723386344&xfbml=1" }

#wrapper.home
  #content.home{ 'data-logged_in'=> current_user.present? }
    .search
      =text_field_tag :college_search, '', :placeholder=>'Enter college name'
    .no_college_found
      .text
        Can't find this college. Enter the full college name
        and your email and we will notify you when the college is online.
      %div
        =text_field_tag :notify_email, '', :placeholder=>'Enter your email'
        =button_tag('Notify Me',id: 'notify_me')
    .college_found
      .text
        Sign in via facebook.
      %div
        #fb-root
        %fb:registration{ :fields=> 'name,birthday,email', :'redirect-uri'=> "http://dev.localeyes.me/users/facebook_register" }

