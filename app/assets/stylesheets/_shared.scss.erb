#header {
  width: 80%;
  min-width: 800px;
  margin: auto;
  height: 50px;
  margin: 10px auto;
  background-color: white;
  a { text-decoration: none; padding-left: 10px }
  h1 {
    display: inline-block;
    vertical-align: top;
    line-height: 37px;
    font-weight: bold;
    font-size: 20px
  }
}

.settings_div {
  position: relative;
  display: inline-block;

  .link {
    display: inline-block;
    margin-right: 2px;
    cursor: pointer;
    font-size: 73%;
    margin-left: 20px;
  }
}

.field_with_errors{
  display: inline-block;
  color: red;
  font-size: 90%;
}

/*  Buttons */
span.button, a.button, input.button{
  color:  white;
  font-size: 13px;
  background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0.34, rgb(10,75,136)),
    color-stop(0.67, rgb(32,101,166))
  );
  background-image: -moz-linear-gradient(
      center bottom,
      rgb(32,101,166) 34%,
      rgb(10,75,136) 67%
  );

  border-color: rgb(32,101,166);

  @include rounded(10px);
  padding: 6px 10px;
  text-align: center;
  text-decoration: none;
}

input.button {
  padding: 4px 10px;
}


/* for coloring the events of different type  */
/*div { color: blue; }*/
$event_color: #a8d3ff;
$special_color: #fff846;
$announcement_color: #ff9234;

.event_type {
  background-color: $event_color;
  span, div {
    background-color: $event_color;
  }
}

.special_type {
  background-color: $special_color;
  span, div {
    background-color: $special_color;
  }
}

.announcement_type {
  background-color: $announcement_color;
  span, div {
    background-color: $announcement_color
  }
}

