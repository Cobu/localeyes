@import 'mixins';
@import 'shared';


.ui-autocomplete-loading {
  background: white url(<%= asset_path 'ui-anim_basic_16x16.gif' %>) right center no-repeat;
}

a.ui-corner-all {
  font-size:12px !important;
  font-family:Arial;
}

.facebook_login {
  width:150px;
  height:23px;
  background: url(<%= asset_path 'facebook_signin.png' %>) 0 0;
}

.facebook_register { display:none; margin-top:10px }

iframe.fb_ltr {
  width:430px !important;
  opacity:1;
}


.settings, .location, .event_types {
  @extend .settings_div;
}

.legend  {
  position:absolute;
  top: -35px;
  left: -140px;
  z-index: 1000;
  width: 350px;
  font-size:12px;
  display: none;

  div { display: inline-block; }

  .type {
    margin: 0 10px;
    .event_type, .special_type, .announcement_type {
      width: 15px;
      height: 15px;
      border: 1px solid black;
    }
  }
}

#wrapper.home {
  background: url(<%= asset_path 'downtown_new_paltz.jpg' %>) no-repeat 50% 80% fixed;
  width: 100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;

  #content.home {
    opacity:0.88;
    position:relative;
    margin: 100px auto;
    width:450px;
    height:300px;
    color:white;
    font-size:12px;
    text-align:center;
    background-color: black;
    border: 1px solid #666666;
    @include rounded(10px);

    .top_blurb {
      font-size:17px;
      margin-top:15px
    }

    .search {
      .text {
        font-size:110%;
        text-align:center;
      }
      margin-top: 12px;
      input {
        background-color: white;
        height: 24px;
        width:340px;
      }
    }

    .no_college_found {
      margin-top: 12px;
      display:none;

      .text, .notice {
        margin:4px auto;
        width:330px;
      }
      #notify_email {
        width:180px;
        line-height:17px;
      }
      #notify_me {
        margin-left:6px;
        line-height:15px;
        @include rounded(10px);
      }
    }

    .college_found {
      display:none;
      margin: 14px auto;
      height: 30px;
      .text {
        color:white;
        margin: 10px;
      }
      a.button { padding: 3px 10px; }
      .link {
        vertical-align:top;
        display: inline-block;
        margin: 0 10px !important;
      }
    }
  }

}




#content.consumer_events {
  width: 90%;
  min-width: 900px;
  margin: 20px auto;
}

.event_list_header {
  @include text_inset;
  width:96%;
  text-align:center;
  font-size:140%;
  color:black;
  background-color: #cccccc;
  border: 1px solid #666666;
  height:20px;
  padding:5px 0px;
  border-top-right-radius: 8px;
  -moz-border-radius-topright: 8px;
  -webkit-border-top-right-radius: 8px;
  border-top-left-radius: 8px;
  -moz-border-radius-topleft: 8px;
  -webkit-border-top-left-radius: 8px;
}

#event_list_container {
  margin: 0 5% 0 0;
  width: 46%;
  min-width: 400px;
  height: 490px;
  vertical-align: top;
  display: inline-block;
}

#event_list_inner {
  width: 100%;
  #event_list {
    width: 100%;
	  height: 470px;
	  overflow: auto;
    position: relative;
  }
}

.event_bar {
  border: 1px solid #666666;
  display:inline-block;
}

.day_header {
  width:99%;
  height: 30px;
  @extend .event_bar;
  background-color: #ffffff;
  text-align: center;
  vertical-align: middle;
  padding: 10px 0px 0px 0px;
}

ul, li {
  list-style-type: none;
}

.event {
  @extend .event_bar;
  width:98%;
  padding: 5px 0px 5px 5px;

  .business_img {
    width: 5%;
    display: inline-block;
    img { width:17px; height:24px; }
  }

  .info {
    width: 63%;
    display:inline-block;
  }

  .images {
    width:28%;
    display: inline-block;
    font-size: 9px;
    text-align: center;
    vertical-align: top;

    .vote, .fave {
      display: inline-block;
      width: 23px;
      vertical-align: top;
    }
    .fave { margin-right: 8%; }

    img {
      cursor: pointer;
      margin-right: 10px;
      width: 21px;
    }
  }

  .full { width:90%; }

  .description {
    display: none;
    margin: 6px 0 0 23px;
    width: 90% !important;
  }

}


#map_canvas_container {
  width: 48%;
  display: inline-block;
  position: relative;

  .filter {
    position: absolute;
    top: 0px;
    left: 0px;
    width:140px;
    z-index: 1000;
    border: 1px solid gray;
    background-color: #ccc;
    padding: 2px;
    display: none;

    div { display:inline-block; }

    .group {
      width:100%;
      font-size:12px;
      margin-top:5px;

      .img {
        vertical-align:middle;
        img { width:24px; height:25px; }
      }

      .item {
        text-align:left;
        line-height:20px;
        margin:2px 0px;
        padding-left:10px;
        width:51%;
      }
    }
  }

  .search {
    position:absolute;
    top: -30px;
    left: -50px;
    z-index: 1000;
    width: 420px;
    display:none;

    input {
      background-color: white;
      height: 24px;
      width:340px;
    }
  }

  #map_canvas {
    width: 100%;
    height: 500px;
    border: 1px solid #666666;
  }
}


.business {
  padding: 10px 10px 0 10px;
  border-right: 1px solid #666666;
  border-left: 1px solid #666666;

  .info {
    width:48%;
    vertical-align:top;
    display:inline-block;
  }

  .hours {
    width:44%;
    padding-left:25px;
    display:inline-block;

    .line {
      .day_name {
        display:inline-block;
        width:20px;
      }
      .from_to {
        display:inline-block;
      }
    }
  }

  .close {
    position:absolute;
    top: 2px;
    right: 8px;
    cursor:pointer;
  }
}

