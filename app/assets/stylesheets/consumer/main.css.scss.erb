@import 'mixins';
@import 'shared';


.ui-autocomplete-loading {
  background: white url(<%= asset_path 'ui-anim_basic_16x16.gif' %>) right center no-repeat;
}

a.ui-corner-all {
  font-size:12px !important;
  font-family:Arial;
}

#fbRegistrationWidgetTopmost { width:430px !important; }
.fb_iframe_widget { width:430px !important; }
iframe.fb_ltr { width:430px !important; }

.location {
  @extend .settings_div;

  .search {
    position:absolute;
    top:-40px;
    left:105px;
    z-index: 1000;
    width: 420px;
    display:none;

    input {
      background-color: white;
      height: 24px;
      width:340px;
    }
  }

}

.settings {
  @extend .settings_div;

  .filter {
    position:absolute;
    top:-13px;
    left:185px;
    width:140px;
    z-index: 1000;
    border:1px solid gray;
    background-color: #ccc;
    padding:2px;
    display:none;

    div { display:inline-block; }

    .group {
      width:100%;
      font-size:12px;
      margin-top:5px;

      .img {
        vertical-align:middle;
        img { width:24px; height:25px; }
      }

      .item {
        text-align:left;
        line-height:20px;
        margin:2px 0px;
        padding-left:10px;
        width:51%;
      }
    }
  }
}

.event_types {
  @extend .settings_div;

  .legend  {
    position:absolute;
    top:-35px;
    left:-170px;
    z-index: 1000;
    width:350px;
    font-size:12px;
    display:none;

    div { display:inline-block; }

    .type {
      margin: 0 10px;
      .event_type, .special_type, .announcement_type {
        width:15px;
        height:15px;
        border:1px solid black;
      }
    }
  }
}

#wrapper.home {
  background: url(<%= asset_path 'downtown_new_paltz.jpg' %>) no-repeat 50% 80% fixed;
  width: 100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;

  #content.home {
    opacity:0.88;
    position:relative;
    margin: 100px auto;
    width:450px;
    height:300px;
    color:black;
    text-align:center;
    background-color: black;
    border: 1px solid #666666;
    @include rounded(10px);

    .search {
      margin-top: 12px;
      input {
        background-color: white;
        height: 24px;
        width:340px;
      }
    }

    .no_college_found {
      margin-top: 12px;
      display:none;
      color: white;
      font-size:90%;

      .text {
        margin:4px auto;
        width:330px;
      }
      #notify_email {
        width:180px;
        line-height:17px;
      }
      #notify_me {
        margin-left:6px;
        line-height:15px;
        @include rounded(10px);
      }
    }

    .college_found {
      display:none;

      .text {
        color:white;
      }
    }
  }

}


.event_list_header {
  @include text_inset;
  width:380px;
  text-align:center;
  font-size:140%;
  color:black;
  background-color: #cccccc;
  border: 1px solid #666666;
  height:20px;
  padding:5px 0px;
  border-top-right-radius: 8px;
  -moz-border-radius-topright: 8px;
  -webkit-border-top-right-radius: 8px;
  border-top-left-radius: 8px;
  -moz-border-radius-topleft: 8px;
  -webkit-border-top-left-radius: 8px;
}


#content.consumer_events {
  width:84%;
  margin:20px auto;
  .header {
    margin-left: 400px;
  }
}

.event_bar {
  width:370px;
  border: 1px solid #666666;
  display:inline-block;
}

.day_header {
  width:360px;
  height:30px;
  @extend .event_bar;
  background-color: #ffffff;
  text-align: right;
  padding-right: 20px;
  padding-top: 5px;
}

ul, li {
  list-style-type: none;
}

.event {
  @extend .event_bar;
  width:375px;
  padding: 5px 0px 5px 5px;

  .info {
    width:67%;
    display:inline-block;
  }

  .images {
    cursor:pointer;
    display:inline-block;
  }

  .full { width:100%; }

  .description {
    display:none;
    margin:6px 0;
    width:90% !important;
  }

}

#event_list_container {
  width: 400px;
  height: 490px;
  vertical-align:top;
  display:inline-block;
}

#center_div {
  display:inline-block;
  width:20px;
}

#event_list {
  width: 400px;
	height: 470px;
	overflow: auto;
  position: relative;
}

#map_canvas_container {
  display:inline-block;
  #map_canvas {
    width: 450px;
    height: 500px;
    border: 1px solid #666666;
  }
}


.business {
  /*background-color:inherit;*/
  width:360px;
  padding:10px;
  border-right: 1px solid #666666;
  border-left: 1px solid #666666;

  .info {
    width:48%;
    vertical-align:top;
    display:inline-block;
  }

  .hours {
    width:44%;
    padding-left:25px;
    display:inline-block;

    .line {
      .day_name {
        display:inline-block;
        width:20px;
      }
      .from_to {
        display:inline-block;
      }
    }
  }

  .close {
    position:absolute;
    top: 2px;
    right: 8px;
    cursor:pointer;
  }
}

