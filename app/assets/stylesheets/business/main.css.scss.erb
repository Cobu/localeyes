@import 'mixins';
@import 'shared';


#calendar_container {
  width: 900px;
  margin: auto;
  .fc-event-inner { color:black; }
}

#wrapper {
  @extend .body_size;
  margin: auto;
}

body.home {
  background: url(<%= asset_path 'downtown_new_paltz.jpg' %>) no-repeat 50% 80% fixed;

  #wrapper.home {

    #logo {
      opacity:0.88;
      margin: 40px auto;
      width:65%;
      min-width: 700px;
      height:100px;
      background-color: white;
      border: 1px solid #666666;
      @include rounded(20px);
      div {display: inline-block;}

      .wrapper {
        width: 100%;
        .img {
          width:60%;
          text-align: right;
          img.logo {
            margin: 10px 15px;
            width:400px;
            height:80px;
          }
        }

        .text {
          line-height: 110px;
          font-size: 280%;
          font-weight: bold;
          vertical-align: top;
        }
      }
    }

    #content {
      a { text-decoration: none }
      background:rgb(0,0,0);
      background:rgba(0,0,0,0.8);
      position:relative;
      margin: 0px auto;
      width:65%;
      min-width: 700px;
      height:560px;
      color:white;
      font-size:12px;
      text-align:center;
      border: 1px solid #666666;
      @include rounded(10px);

      .top_section {
        margin-top: 5px;
        width: 100%;

        .field {
          padding: 7px 0px;
          input{
            width: 180px;
            font-size: 14px;
            padding-left:10px;
            margin:0 10px;
            @include rounded(20px);
          }
        }

        .spinner_elem {
          width: 30%;
          text-align:left;
          display: inline-block;
          vertical-align: middle;
          height: 24px;
          margin-left: 5px
        }

        h1 { margin: 3px auto; font-size: 21px; font-weight: normal;}

        .login {
          display: inline-block;
          width: 30%;
          vertical-align: top;

          .sign_in_button_wrapper {
            .sign_in_button {
              width: 60%;
              text-align:right;
              display: inline-block;
              input.button { margin: 5px auto }
            }
          }
        }

        .register {
          display: inline-block;
          width: 69%;
          .row {
            .field { display: inline-block; }
          }
          .register_button_wrapper {
            .register_button {
              text-align: right;
              display: inline-block;
              width: 50%;
            }
          }
        }

      }
      .promo {
        padding-left: 20px;
        font-size: 120%;
        text-align: left;

        .left_panel {
          display: inline-block;
          width: 55%
        }

        .right_panel {
          text-align: center;
          padding-top: 14px;
          vertical-align: top;
          display: inline-block;
          width: 40%;
          iframe {
            margin-top: 10px;
            width: 85%;
          }
        }
      }
    }
  }
}


#wrapper.business_show {
  .header{
    margin-bottom: 20px;
    margin-right: 8%;
    font-size:16px;
    text-align: right;
    select{
      background-color: inherit;
      font-size:100%;
    }
    .link {
      display:inline-block;
      margin-left: 10px;
      a.button{ padding: 4px 10px }
    }
  }
}

#wrapper.business_edit {
  width: 75%;
  min-width: 800px;
  margin: auto;
  border-color: yellow;
}

form.new_business, form.edit_business{
  width: 58%;
  margin-top: 15px;
  display:inline-block;

  .wrapper_panel {
    width: 100%;
    .buiz_panel {
      width: 210px;
      display:inline-block;
    }
    .auth_panel {
      width: 220px;
      margin-top: 5px;
      vertical-align: top;
      display:inline-block; 

      .auth_section {
        margin-bottom: 20px;
      }
      .connections { margin-top: -5px; }
      .connection {
        div { display:inline-block; margin: 0px 4px;}
        width: 100%;
        margin: 5px 0;
        img { width:18px }
        .text, .close {
          vertical-align: top;
          padding-top: 1px;
        }
      }
    }
  }

  .field.phone {
    input { margin-right: 3px; }
    input#business_phone_first3 { width:30px; }
    input#business_phone_second3 { width:30px; }
    input#business_phone_last4 { width:40px; }
  }

  .field.zip {
    input { width:60px; margin-left: 59px }
  }

  .field.position {
    margin:10px 0px;
    input { width:100px; }
  }

  .buttons {
    margin-top: 15px;
    text-align:center;
    .button { margin: 0 8px }
  }

  .open_times {
    margin-top:15px;
    .days_times {
      .day_name {
        width:15px;
      }
      div {
        display:inline-block;
      }
    }
  }
}

#map_canvas_container {
  width:40%;
  min-width:330px;
  margin:20px 0px;
  display:inline-block;
  vertical-align:top;
  .field.map_location { margin-bottom: 15px}

  #map_canvas {
    width: 330px;
    height: 300px;
    border: 1px solid #666666;
  }
}
