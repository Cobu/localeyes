@import 'mixins';
@import 'shared';


#calendar_container {
  width: 900px;
  margin: auto;
  .fc-event-inner { color:black; }
}

#wrapper {
  width: 100%;
  min-width: 900px;
  margin: auto;
}

#wrapper.home {
  background: url(<%= asset_path 'downtown_new_paltz.jpg' %>) no-repeat 50% 80% fixed;
  width: 100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;

  #logo {
    opacity:0.88;
    margin: 40px auto;
    width:65%;
    min-width: 700px;
    height:100px;
    background-color: white;
    border: 1px solid #666666;
    @include rounded(20px);
    div {display: inline-block;}

    .wrapper {
      width: 100%;
      .img {
        width:60%;
        text-align: right;
        img.logo {
          margin: 10px 15px;
          width:400px;
          height:80px;
        }
      }

      .text {
        line-height: 110px;
        font-size: 280%;
        font-weight: bold;
        vertical-align: top;
      }
    }
  }

  #content {
    a { text-decoration: none }
    opacity:0.88;
    position:relative;
    margin: 0px auto;
    width:65%;
    height:300px;
    color:white;
    font-size:12px;
    text-align:center;
    background-color: black;
    border: 1px solid #666666;
    @include rounded(10px);

    .top_section {
      margin-top: 10px;
      width: 100%;

      .login {
        display: inline-block;
        width: 30%;

        .field {
          padding: 7px 0px;
          input{
            width: 200px;
            font-size: 18px;
            padding-left:10px;
            margin:0 10px;
            @include rounded(20px);
          }
        }
        h1 { margin: 3px auto; font-size: 21px; font-weight: normal;}
        input.button { margin: 5px auto }
      }

      .register {
        width: 69%;
        display: inline-block;
      }

    }

  }
}

#wrapper.business_users_login, #wrapper.business_users_register {
  h1 { margin: 20px 0 10px 107px }
  #content {
    width:34%;
    .alert {
      text-align: center;
      font-size: 110%;
      margin-bottom: 10px;
    }
    margin: 0 auto;
    .field {
      font-size: 17px;
      padding: 7px 0px;
      label{ display:inline-block;  width: 90px; text-align:right }
      input{ width: 200px; font-size: 17px;margin:0 10px }
    }
    input.button { margin: 20px 0 0 107px }
  }
}


#wrapper.business_show {
  .header{
    margin-bottom: 20px;
    margin-right: 8%;
    font-size:16px;
    text-align: right;
    select{
      background-color: inherit;
      font-size:100%;
    }
    .link {
      display:inline-block;
      margin-left: 10px;
      a.button{ padding: 4px 10px }
    }
  }
}

form.new_business, form.edit_business{
  width: 440px;
  margin-top: 15px;
  display:inline-block;

  .wrapper_panel {
    width: 100%;
    .buiz_panel {
      width: 210px;
      display:inline-block;
    }
    .auth_panel {
      width: 220px;
      margin-top: 5px;
      vertical-align: top;
      display:inline-block; 

      .auth_section {
        margin-bottom: 20px;
      }
      .connections { margin-top: -5px; }
      .connection {
        div { display:inline-block; margin: 0px 4px;}
        width: 100%;
        margin: 5px 0;
        img { width:18px }
        .text, .close {
          vertical-align: top;
          padding-top: 1px;
        }
      }
    }
  }

  .field.phone {
    input { margin-right: 3px; }
    input#business_phone_first3 { width:30px; }
    input#business_phone_second3 { width:30px; }
    input#business_phone_last4 { width:40px; }
  }

  .field.zip {
    input { width:60px; margin-left: 59px }
  }

  .field.position {
    margin:10px 0px;
    input { width:100px; }
  }

  .buttons {
    margin-top: 15px;
    text-align:center;
    .button { margin: 0 8px }
  }

  .open_times {
    margin-top:15px;
    .days_times {
      .day_name {
        width:15px;
      }
      div {
        display:inline-block;
      }
    }
  }
}

#map_canvas_container {
  width:430px;
  margin:20px 0px;
  display:inline-block;
  vertical-align:top;
  .field.map_location { margin-bottom: 15px}

  #map_canvas {
    width: 430px;
    height: 380px;
    border: 1px solid #666666;
  }
}
